<div class="container">

  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

      <%= attachment_image_tag user,:image %>


      <table class="table">
        <tbody>
          <tr>
            <th scope="row">name</th>
            <th>
              <%= @user.name %>
            </th>
          </tr>

          <tr>
            <th scope="row">introduction</th>
            <th>
              <%= @user.body %>
            </th>
          </tr>
        </tbody>

      </table>
      <% end %>

    <% if @user.id == current_user.id %>
      <p><%=link_to"編集",edit_user_path(@user) %></p>
    <% end %>


    </div>

      <h1>New book</h1>


    <div class="col-md-8">
      <h2>Books</h2>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <% @books.each do |book| %>

        <tbody>
          <tr>
            <td>
              <%= book.title %>
            </td>

            <td>
              <%= book.body %>
            </td>
          </tr>
        </tbody>

        <% end %>

      </table>

    </div>

  </div>

</div>