<div class="container">

  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

      <%= attachment_image_tag @user,:image %>


      <table class="table">
        <tbody>
          <tr>
            <th scope="row">name</th>
            <th>
              <%= current_user.name %>
            </th>
          </tr>

          <tr>
            <th scope="row">introduction</th>
            <th>
              <%= current_user.body %>
            </th>
          </tr>
        </tbody>

      </table>

    <% if @user.id == current_user.id %>
      <p><%=link_to"編集",edit_user_path(@user) %></p>
    <% end %>


    <h2 class="mt-3">New book</h2>

      <!--クリエイト欄-->
       <%= form_with model:@book, local:true do |f| %>
       <div class="form-group">
        <label for="inputTitle">Title</label>
        <%= f.text_field :title, autofocus: true, id:"inputTitle" ,class:"form-control" %>
      </div>

      <div class="form-group">
        <label for="inputBody">Opinion</label>
        <%= f.text_area :body, autofocus: true, id:"inputTitle" ,class:"form-control" %>
      </div>

      <%= f.submit "Create Book",class:"btn btn-success" %>

      <% end %>

    </div>


    <div class="col-md-8 col-offset-1">
      <h2>Books</h2>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <% @books.each do |book| %>

        <tbody>
          <tr>
            <td>
              <%= book.title %>
            </td>

            <td>
              <%= book.body %>
            </td>
          </tr>
        </tbody>

        <% end %>

      </table>
    </div>
  </div>
</div>