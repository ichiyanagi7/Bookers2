<div class="container">

  <!--バリデーションのエラーメッセージ表示-->
  <% if @book.errors.any? %>
    <div class="alert alert-danger">
      <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">

    <!--indexページの左側-->
    <div class="col-md-3">
      <h2>User info</h2>

      <%= attachment_image_tag @user,:image,:fill,60,60, fallback: "no_image.jpg"%>


      <table class="table">
        <tbody>
          <tr>
            <th scope="row">name</th>
            <th>
              <%= current_user.name %>
            </th>
          </tr>

          <tr>
            <th scope="row">introduction</th>
            <th>
              <%= current_user.body %>
            </th>
          </tr>
        </tbody>
      </table>

  <!--プロフィール編集ボタン-->
      <div class="row">
        <%= link_to edit_user_path(current_user.id) ,class:"btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog "></i>
        <% end %>
      </div>


      <h2 class="mt-3">New book</h2>

  <!--New Book 欄-->
       <%= form_with model:@book, local:true do |f| %>
       <div class="form-group">
        <label for="inputTitle">Title</label>
        <%= f.text_field :title, autofocus: true, id:"inputTitle" ,class:"form-control" %>
      </div>

      <div class="form-group">
        <label for="inputBody">Opinion</label>
        <%= f.text_area :body, autofocus: true, id:"inputTitle" ,class:"form-control" %>
      </div>

      <%= f.submit "Create Book",class:"btn btn-success" %>

      <% end %>

    </div>



<!--indexページの右側-->

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <% @books.each do |book| %>

        <tbody>
          <tr>
            <td>
            <!--プロフィール画像リンク-->
            <%= link_to user_path(book.user_id) do %>
              <%= attachment_image_tag book.user,:profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" ,size:"40x40"%>
            <% end %>
            </td>

            <td>
              <%= link_to book.title ,book_path(book.id) %>
            </td>

            <td>
              <%= book.body %>
            </td>
          </tr>
        </tbody>

        <% end %>

      </table>
    </div>
  </div>
</div>