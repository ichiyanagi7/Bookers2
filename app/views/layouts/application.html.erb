<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/*******.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg bg-dark">
      <div class="container">
        <%= link_to "Bookers",root_path,class:"navbar-brand text-white" %>

        <div class="navbar-ul">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>

              <li class="nav-item">
                <%= link_to root_path,class:"nav-link text-white" do %>
                  <i class="fas fa-home"></i>
                  Home
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to users_path,class:"nav-link text-white" do %>
                  <i class="fas fa-users"></i>
                  Users
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to books_path,class:"nav-link text-white" do %>
                  <i class="fas fa-book-open"></i>
                  Books
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to destroy_user_session_path, method: :delete,class:"nav-link text-white" do %>
                  <i class="fas fa-sign-out-alt"></i>
                  logout
                <% end %>
              </li>

            <% else %>

              <li class="nav-item">
                <%= link_to root_path,class:"nav-link text-white" do %>
                  <i class="fas fa-home"></i>
                  Home
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to homes_about_path,class:"nav-link text-white" do %>
                  <i class="fas fa-link"></i>
                  About
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to new_user_registration_path,class:"nav-link text-white" do %>
                  <i class="fas fa-user-plus"></i>
                  sign up
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to new_user_session_path,class:"nav-link text-white" do %>
                  <i class="fas fa-sign-out-alt"></i>
                  login
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>

      </div>
      </nav>
    </header>

    <%= yield %>

  </body>

  <footer>
    <div class="container mt-5">
      <p class="text-center">CopyRight Infatop.inc</p>
    </div>
  </footer>

</html>
