<div class="container">
  <div class="row">
    <div class="col-lg-5 mx-auto">
      <h2>User info</h2>

 <!--バリデーションのエラーメッセージ表示-->
      <% if @user.errors.any? %>
        <div class="text-danger">
          <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>


      <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName" ,class:"form-control" %>
      </div>

      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %>
      <div class="form-group">
        <label for="inputImage">Image</label>
        <%= f.attachment_field :profile_image ,class:"form-control-file" %>
      </div>

      <div class="form-group">
        <label for="inputIntroduction">Introduction</label>
        <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" ,class:"form-control" %>
      </div>

        <%= f.submit "Update User",class:"btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>