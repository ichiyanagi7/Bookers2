<div class="container">

  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100 %>


      <table class="table">
        <tbody>
          <tr>
            <th scope="row">name</th>
            <th>
              <%= @user.name %>
            </th>
          </tr>

          <tr>
            <th scope="row">introduction</th>
            <th>
              <%= @user.body %>
            </th>
          </tr>
        </tbody>
      </table>


      <!--プロフィール編集ボタン-->


      <h1>New book</h1>

      <!--クリエイト欄-->




    </div>



    <div class="col-md-8">
      <h2>Books</h2>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <% @books.each do |book| %>

        <tbody>
          <tr>
            <td>
              <%= book.title %>
            </td>

            <td>
              <%= book.body %>
            </td>
          </tr>
        </tbody>

        <% end %>

      </table>

    </div>
  </div>

</div>