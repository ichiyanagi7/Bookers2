<div class="container">

  <div class="row-lg-4">
    <div class="col">
      <h1>User info</h1>
    </div>

    <div class="col">
      <h1>New book</h1>
    </div>
  </div>

  <div class="row-lg-8">
    <div class="col">
      <h2>Books</h2>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <% @books.each do |book| %>

        <tbody>
          <tr>
            <td>
              <%= book.title %>
            </td>

            <td>
              <%= book.body %>
            </td>
          </tr>
        </tbody>

        <% end %>

      </table>

    </div>
  </div>

</div>