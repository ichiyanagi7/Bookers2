
<h3>Follow Users</h3>

<% if @users.exists? %>
 <table class="table">
   <thead>
     <tr>
       <th>image</th>
       <th>name</th>
       <th></th>
       <th></th>
       <th></th>
     </tr>
   </thead>
  <% @users.each do |user| %>
   <tbody>
     <tr>
       <td>
         <%= attachment_image_tag user,:profile_image,:fill,40,40,fallback:"no_image.jpg",size:"40x40" %>
       </td>
       <td><%= user.name %></td>
        <td>
          フォロー数: <%= user.followings.count %>
        </td>
        <td>
          フォロワー数: <%= user.followers.count %>
        </td>
        <td>
          <%= link_to "Show",user_path(user) %>
        </td>
     </tr>
   </tbody>
  <% end %>
 </table>
<% else %>
   <p>ユーザーはいません</p>
<% end %>
